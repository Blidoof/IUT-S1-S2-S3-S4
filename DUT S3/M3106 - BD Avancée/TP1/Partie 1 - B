--PROCEDURE HELLO WORLD

CREATE OR REPLACE PROCEDURE HELLOWORLD AS 
BEGIN
  dbms_output.put_line('Hello World');
END HELLOWORLD;

--PROCEDURE SALAIRE

CREATE OR REPLACE FUNCTION salaire (nom_Employe in Varchar2)
RETURN NUMBER AS
-- DÃ©claration de variables.
sal EMP.SALAIRE%TYPE;
BEGIN
-- Corps de la fonction
SELECT EMP.SALAIRE INTO sal FROM EMP WHERE EMP.NOM_COMPLET=nom_Employe;

RETURN sal;
END salaire;

--PROCEDURE SALAIRE + POSTE + NUMERO

create or replace FUNCTION salau (EMPLOYE IN VARCHAR2 ) RETURN VARCHAR2 AS 

sal EMP.SALAIRE%type;
nume EMP.NUMEMP%TYPE;
post EMP.PROFESSION%TYPE;
retour VARCHAR2(50);

BEGIN
  
  SELECT EMP.SALAIRE INTO sal FROM EMP WHERE NOM_COMPLET = EMPLOYE;
  SELECT EMP.NUMEMP INTO nume FROM EMP WHERE NOM_COMPLET = EMPLOYE;
  SELECT EMP.PROFESSION INTO post FROM EMP WHERE NOM_COMPLET = EMPLOYE;
  retour := 'NUMERO =' || nume || ', POSTE =' || post || ', SALAIRE =' || sal;
  RETURN retour;
  
END salau;

